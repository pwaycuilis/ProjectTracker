@model ProjectTracker.Models.Project

<form method="post" asp-action="Create">
    <table class="table caption-top table-striped">
        <caption>Add Project</caption>
        <thead>
            <tr>
                <th scope="col">
                    <label asp-for="Name"></label>
                </th>

                <th scope="col">Description</th>
                
                <th scope="col">Created</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                @*<th scope="row">Text Here</th>*@
                <td>
                    <input asp-for="Name" class="form-control" />
                </td>

                <td>
                    <input asp-for="Description" class="form-control" />
                </td>
                

                <td>
                    @DateTime.Now
                </td>
            </tr>
        </tbody>
    </table>
    <div class="border p-3 border-bottom">
        <div class="form-group row">
            <div class="col-8 offset-2 row">
                <div class="col">
                    <input type="submit" class="btn btn-info w-75" value="Create" />
                </div>
                <div class="col">
                    <a asp-controller="Project" asp-action="Index" class="btn btn-danger w-75">Go Back</a>
                </div>
            </div>
        </div>
    </div>
</form>



